@model WebSitem.Models.anasayfa
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
    
}

@if (TempData["anasayfaGuncelle"] != null)
{
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script>
    swal("Başarılı","Güncelleme Gerçekleşti","success");
    </script>
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Ana Sayfa</h1>
                </div>
                @*<div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Simple Tables</li>
                    </ol>
                </div>*@
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Bordered Table</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Foto</th>
                                        <th>Üst Başlık</th>
                                        <th>Başlık</th>
                                        <th>İçerik</th>
                                        <th>Alt Üst Başlık</th>
                                        <th>Alt Başlık</th>
                                        <th>Alt İçerik</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td><img src="~/Content/images/@Model.Foto" width="150" /></td>
                                        <td>@Model.UstBaslik</td>
                                        <td>@Model.Baslik</td>
                                        <td>@Html.Raw(Model.Icerik)</td>
                                        <td>@Model.AUstBaslik</td>
                                        <td>@Model.ABaslik</td>
                                        <td>@Html.Raw(Model.AIcerik)</td>
                                        <td>
                                            @Html.ActionLink("Güncelle", "AnasayfaGüncelle", null, new { @class = "btn btn-info" })
                                        </td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->

                    </div>

                </div>

            </div>

        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
