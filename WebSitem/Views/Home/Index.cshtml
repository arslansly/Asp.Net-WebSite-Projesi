@model WebSitem.Models.anasayfa
@{

    ViewBag.Title = "Anasayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="page-section clearfix">
    <div class="container">
        <div class="intro">
            <img class="intro-img img-fluid mb-3 mb-lg-0 rounded" src="~/Content/images/@Model.Foto" alt="">
            <div class="intro-text left-0 text-center p-5 rounded">
                <h2 class="section-heading mb-4"> 
                <span class="section-heading-upper">@Model.UstBaslik</span>
                <span class="section-heading-lower">@Model.Baslik</span>
                </h2>
                @Html.Raw(Model.Icerik)
            </div>
        </div>
    </div>
</section>





 <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
     <ol class="carousel-indicators">
         <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
         <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
         <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
     </ol>
     <div class="carousel-inner">
         <div class="row">
             <div class="col-xl-9 mx-auto">
             <div class="carousel-item active">
                 <img class="d-block w-100" src="~/Content/images/intro.jpg" alt="İlk Slayt">
             </div>
             <div class="carousel-item">
                 <img class="d-block w-100" src="~/Content/images/about.jpg" alt="İkinci Slayt">
             </div>
             <div class="carousel-item">
                 <img class="d-block w-100" src="~/Content/images/cafe1.jpg" alt="Üçüncü Slayt">
             </div>
           
         </div>
         </div>
     </div>
     <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
         <span class="carousel-control-prev-icon" aria-hidden="true"></span>
         <span class="sr-only">Öncesi</span>
     </a>
     <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
         <span class="carousel-control-next-icon" aria-hidden="true"></span>
         <span class="sr-only">Sonrası</span>
     </a>
 </div>  




<section class="page-section">
    <div class="container">
        <div class="row">
            <div class="col-xl-9 mx-auto">
                    <div class="cta-inner text-center rounded">  
                <h2 class="section-heading mb-4">
                    <span class="section-heading-upper">@Model.AUstBaslik</span>
                    <span class="section-heading-lower">@Model.ABaslik</span>
                </h2>
                @Html.Raw(Model.AIcerik)
            </div>
            </div>
        </div>
    </div>
</section>

